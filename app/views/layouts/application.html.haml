!!! Strict
%html{html_attrs}
  
  %head
    %title
      == ShouldBet.com - #{h(yield(:title) || AppConfig[:title])} - weight loss challenge, fitness challenge, friendly bet
    %meta{"http-equiv"=>"Content-Type", :content=>"text/html; charset=utf-8"}/
    %meta{:description => "Shouldbet.com lets you issue friendly challenges to your buddies, and tell the world when you win!"}/
    %meta{:keywords => "weight loss challenge, fitness challenge, friendly bet"}/
    = javascript_include_tag :defaults, :cache => true
    = stylesheet_link_tag 'application'
    = yield(:head)
  
  %body
    #container
      #navigation
        = render( :partial => 'shared/navigation' ) if logged_in?
      - flash.each do |name, msg|
        = content_tag :div, msg, :id => "flash_#{name}"
      
      - if show_title?
        %h1=h yield(:title)
      
      ~ yield
      
      #footer.align-center.pad-top
        = link_to 'terms of use', '/terms.html'
    = render :partial => 'shared/uservoice'
    = render :partial => 'shared/google_analytics' if Rails.env == 'production'
