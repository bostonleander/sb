- title 'Invite a friend'

- form_for @invitation do |f|
  - unless f.error_messages.empty?
    .info
      = f.error_messages
  %ul.rounded
    %li
      = f.label :recipient_email, "Friend's email address"
      %br
      = f.text_field :recipient_email
    
  = link_to "Submit", nil, :class => "whiteButton submit"
