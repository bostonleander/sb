- title "Sign up"

%p
  = render :partial => 'shared/what_is_this'

%p
  == Already have an account? #{link_to "Log in", login_path}.

- form_for @friend do |f|
  = f.error_messages

  = f.hidden_field :invitation_token, :value => params[:invitation_token]
  
  %p
    = f.label :username
    %br
    = f.text_field :username
  %p
    = f.label :name, 'Full name'
    %br
    = f.text_field :name
  %p
    = f.label :email, "Email Address"
    %br
    = f.text_field :email
  %p
    = f.label :password
    %br
    = f.password_field :password
  %p
    = f.label :password_confirmation, "Confirm Password"
    %br
    = f.password_field :password_confirmation
  %p
    = f.check_box :terms_of_use
    = f.label :terms_of_use, "I agree to the #{link_to 'terms of use', '/terms.html'}"

  %p
    = f.submit "Sign up"

= javascript_tag "$('friend_username').activate()"

