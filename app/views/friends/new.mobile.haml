- title "Sign up"

%ul
  %li.arrow== Already have an account? #{link_to "Log in", login_path}

- form_for @friend do |f|
  - unless f.error_messages.empty?
    .info
      = f.error_messages

  = f.hidden_field :invitation_token, :value => params[:invitation_token]
  
  %ul.rounded
    %li
      = f.label :username
      %br
      = f.text_field :username
    %li
      = f.label :name, 'Full name'
      %br
      = f.text_field :name
    %li
      = f.label :email, "Email Address"
      %br
      = f.text_field :email
    %li
      = f.label :password
      %br
      = f.password_field :password
    %li
      = f.label :password_confirmation, "Confirm Password"
      %br
      = f.password_field :password_confirmation
    %li
      = f.check_box :terms_of_use
      = f.label :terms_of_use, "I agree to the #{link_to 'terms of use', '/terms.html'}"

  = link_to "Submit", nil, :class => "whiteButton submit"
