- title "Log in"

%p== Don't have an account? #{link_to "Request an invitation!", :controller => 'invitations', :action => 'i_wanna_play'}

- form_tag sessions_path do
  %p
    = label_tag :login, "Username or Email Address"
    %br
    = text_field_tag :login, params[:login]
  %p
    = label_tag :password
    == (#{link_to 'forgot password?', new_forgot_password_path})
    %br
    = password_field_tag :password
  %p
    = submit_tag "Log in"
    
= javascript_tag "$('login').activate()"

= render :partial => 'shared/what_is_this'
